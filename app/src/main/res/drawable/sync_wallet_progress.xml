<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/radius"/>
            <gradient
                android:endColor="@color/gray_background"
                android:startColor="@color/gray_background"
                />
        </shape>
    </item>

    <item
        android:id="@android:id/progress"
        >
        <clip>
            <shape>
                <corners
                    android:radius="@dimen/radius"/>
                <gradient
                    android:endColor="@color/logo_gradient_end"
                    android:startColor="@color/logo_gradient_start"/>
            </shape>
        </clip>
    </item>

</layer-list>