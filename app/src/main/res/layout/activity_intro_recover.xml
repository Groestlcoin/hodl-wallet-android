<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_intro_recover"
    android:background="@color/gray_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.hodlwallet.presenter.activities.intro.RecoverActivity">

    <co.hodlwallet.presenter.customviews.BRButton
        android:id="@+id/send_button"
        android:layout_width="0dp"
        android:layout_height="@dimen/big_button_height"
        app:buttonType="1"
        android:background="@color/dark_gray"
        android:text="@string/RecoverWallet.next"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:isBreadButton="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <co.hodlwallet.presenter.customviews.BRText
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/RecoverWallet.header"
        android:textColor="@color/white"
        android:textSize="@dimen/header"
        app:customTFont="Electrolize-Regular.ttf"
        app:layout_constraintBottom_toBottomOf="@id/faq_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:elevation="4dp"
        android:src="@drawable/ic_recover_wallet_illustration"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <co.hodlwallet.presenter.customviews.BRText
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/bread_margin"
        android:layout_marginEnd="@dimen/bread_margin"
        android:layout_marginTop="@dimen/bread_margin"
        android:text="@string/RecoverWallet.intro"
        android:lineSpacingMultiplier="1.3"
        android:textColor="@color/logo_gradient_start"
        android:textSize="@dimen/sub_header"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/faq_button"
        android:layout_width="@dimen/faq_dimen"
        android:layout_height="@dimen/faq_dimen"
        android:layout_marginEnd="@dimen/bread_margin"
        android:layout_marginTop="@dimen/bread_margin"
        android:background="@drawable/ic_faq"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</android.support.constraint.ConstraintLayout>
